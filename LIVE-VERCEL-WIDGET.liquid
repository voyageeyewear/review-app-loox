<div class="product-reviews-widget-live" data-product-id="{{ product.id }}">
  <style>
    .product-reviews-widget-live {
      font-family: system-ui, -apple-system, sans-serif;
      max-width: 100%;
      margin: 30px 0;
      padding: 20px;
      border: 1px solid #e5e7eb;
      border-radius: 8px;
      background: #ffffff;
    }
    
    .reviews-title-live {
